<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <p class="error">*<%= @book.errors.count %> errors occurred</p>
  <ul  class="error">
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class = "form">
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="text_field">
    　<label for "book-title" >Title<br></label>
    　<%= f.text_field :title %>
    </div>
    
    <div class="text_area">
    　<label for "book-body" >Body<br></label>
    　<%= f.text_area :body %>
    </div>
    
  　<div class = "submit">
  　   <%= f.submit "Update Book" %>
  　</div>
  　
  <% end %>
</div>
  
<div class="pager">
    <%= link_to "Show",book_path(@book.id) ,class:"table-button" %>|
    <%= link_to "Back",books_path ,class:"table-button" %>
</div>

<footer>
  
</footer>
