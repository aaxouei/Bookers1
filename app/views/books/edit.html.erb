<h1 class="edit-book">Editing Book</h1>
<div class = "edit-form">
<%= form_with model: @book,url: update_book_path(@book.id),method: :patch do |f| %>
　<label for "book-title" >Title</label>
　<%= f.text_field :title %>
</div>
<div class = "new-form">
　<label for "book-body" >Body</label>
　<%= f.text_area :body %>
</div>
　<%= f.submit "Update Book" %>
<% end %>
<div class="pager">
  <span class="edit-show"><%= link_to "Show","/books/#{@book.id}" %></span>
  |
  <span class="edit-back"><%= link_to "Back","/books" %></span>
</div>
