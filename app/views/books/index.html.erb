<div class="notice"><%= flash[:notice] %></div>
<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td align="center"><%= book.title %></td>
        <td align="center"><%= book.body %></td>
        <td><%= link_to "Show",book_path(book.id) ,class:"table-button" %></td>
        <td><%= link_to "Edit",edit_book_path(book.id),class:"table-button" %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?",class:"table-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <p class="error">*<%= @book.errors.count %> errors occurred</p>
  <ul  class="error">
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class = "form">
  <%= form_with model: @book,url: books_path(@book.id), method: :path do |f| %>
    <div class="text_field">
    　<label for "book-title" >Title<br></label>
    　<%= f.text_field :title %>
  　</div>
  　
  　<div class = "text_area">
    　<label for "book-body" >Body<br></label>
    　<%= f.text_area :body %>
  　</div>
  　
  　<div class = "submit">
    　<%= f.submit "Create Book" %>
    </div>
    
  <% end %>
</div>

<footer>
  
</footer>





