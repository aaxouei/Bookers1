<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td class="index-show"><%= link_to "Show","/books/#{book.id}" %></td>
        <td class="indx-edit"><%= link_to "Edit","/books/#{book.id}/edit" %></td>
        <td class="index-destory"><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class = "new-book">New book</h2>
<div class = "new-form">
<%= form_with model: @book do |f| %>
　<label for "book-title" >Title</label>
　<%= f.text_field :title %>
</div>
<div class = "new-form">
　<label for "book-body" >Body</label>
　<%= f.text_area :body %>
</div>
　<%= f.submit "Create Book" %>
<% end %>




